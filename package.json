{
  "name": "project-tra-cuu",
  "version": "1.0.0",
  "description": "Tra cứu & Bán Bill - sử dụng CheckBill Pro (bill.7ty.vn) - TypeScript server + static frontend",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --no-notify --ignore-watch node_modules server.ts",
    "start": "node dist/server.js",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write \"**/*.{ts,js,json,css,md,html}\"",
    "clean": "rimraf dist .cache",
    "prepare": "husky install"
  },
  "keywords": [
    "bill",
    "tra-cuu",
    "electricity",
    "checkbill",
    "typescript",
    "express",
    "exceljs",
    "netlify",
    "supabase"
  ],
  "author": "Bạn",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "exceljs": "^4.3.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "p-limit": "^3.1.0"
  },
  "devDependencies": {
    "@netlify/functions": "^5.1.0",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/express-rate-limit": "^5.1.3",
    "@types/node": "^20.19.24",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18"
  }
}
